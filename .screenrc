# Set default encoding using utf8
defutf8 on

# solve chinese wrong display problem
defencoding utf8
encoding utf8 utf8
#compatiable with shell to make setting such as alas in .bashrc .profile /etc/profile works
shell -$SHELL

#set the startup message
startup_message off
#term linux
#
## solve cannot scoll
termcapinfo xterm|xterms|xs ti@:te=\E[2J

# set screen scroll buffer
defscrollback 10000
#    
# label setting
caption always "%{=u .G} %-w%<%{=ub .y}%n %t%{=u .G}%+w "
hardstatus alwaysignore
hardstatus alwayslastline "%{= .K} [%l]%<%=%{= .W}@%H %=%{= .y} %Y/%m/%d%{= .m} %C %A"

# turn off screen flash
vbell off
